{
  "request": {
    "method": "GET",
    "urlPath": "/oauth2/token",
    "queryParameters": {
      "grant_type": {
        "equalTo": "refresh_token"
      },
      "refresh_token": {
        "matches": ".*"
      }
    }
  },

  "response": {
    "status": 200,
    "jsonBody": {
      "access_token": "my-access-token-123",
      "api_server": "https://api03.iq.questrade.com/",
      "expires_in": 1800,
      "refresh_token": "xyz-refresh_token-987",
      "token_type": "Bearer"
    },
    "transformers": ["response-template"],
    "headers": {
      "Content-Type": "application/json; charset=utf-8",
      "date": "{{now timezone='Europe/London' format='EEE, dd MMM yyyy HH:mm:ss zzz'}}"
    }
  }
}
